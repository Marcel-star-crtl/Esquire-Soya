	<script>
		document.getElementById("addToCartButton").addEventListener("click", async () => {
			const productId = document.getElementById("addToCartButton").getAttribute("data-product-id");
			const quantity = parseInt(document.getElementById("quantityInput").value, 10) || 1;

			const token = localStorage.getItem("token");
			const userId = JSON.parse(atob(token.split('.')[1])).id; 

			const productInfo = {
				productId: productId,
				quantity: quantity,
				userId: userId 
			};

			try {
				const response = await fetch("http://localhost:3000/api/carts/", {
					method: "POST",
					headers: {
						"Content-Type": "application/json",
						"Authorization": `Bearer ${token}`,
					},
					body: JSON.stringify(productInfo),
				});

				const data = await response.json();
				console.log("Product added to cart:", data);
			} catch (error) {
				console.error("Error adding product to cart:", error);
			}
		});

	</script>
	
